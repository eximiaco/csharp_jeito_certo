{
  "AllowedHosts": "*",
  "LogSwitch": "Information",
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "Silverback": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName"
    ],
    "Properties": {
      "ApplicationName": "GymErp"
    }
  },
  "DatabaseConnection": {
    "Host": "localhost",
    "Port": 5432,
    "User": "postgres",
    "Password": "[Password]",
    "DatabaseName": "[DatabaseName]",
    "DisableSsl": true,
    "Pooling": true,
    "MaxPoolSize": 10,
    "MinPoolSize": 0,
    "Timeout": 15,
    "ConnectionIdleLifetime": 300,
    "Multiplexing": false
  },
  "OpenTelemetry": {
    "Endpoint": "http://10.0.17.241:4317"
  },
  "BasePath": "[BASEPATH]",
  "ServicesSettings": {
    "SubscriptionsUri": "http://localhost:5001",
    "LegacyApiUri": "http://localhost:5000",
    "ProcessPaymentUri": "http://localhost:5002",
    "ScheduleEvaluationUri": "http://localhost:5003"
  },
  "Kafka": {
    "Connection": {
      "BootstrapServers": "localhost:9092",
      "SecurityProtocol": "Plaintext",
      "SaslMechanism": "Plain",
      "SaslUsername": "",
      "SaslPassword": "",
      "EnableSslCertificateVerification": false,
      "ClientId": "GymErp"
    }
  },
  "LegacyApi": {
    "BaseUrl": "http://localhost:5000",
    "TimeoutSeconds": 300,
    "RetryAttempts": 3
  },
  "SubscriptionsApi": {
    "BaseUrl": "http://localhost:5001",
    "TimeoutSeconds": 30
  }
}
